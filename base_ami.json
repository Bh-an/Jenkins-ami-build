{
    "variables":{
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region":"",
        "subnet_id":"",
        "source_ami": "",
        "ssh_username": "ubuntu"
    },

    
    "builders":[
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "subnet_id": "{{user `vpc_public_sn_id`}}",
            "source_ami": "ami-08c40ec9ead489470",
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "ami_name": "csye7125_ami_jenkins_{{timestamp}}",
            "ami_users": "{{ env 'AMI_USERS' }}",
            "ami_description":"${ami_description}",
            "skip_region_validation":"true",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_type": "gp2",
                    "volume_size": "8",
                    "delete_on_termination": true
                }
            ]
        }
    ],

    "provisioners": [
        {
        
        "type": "shell",
        "inline": [
        "sudo apt update",
        "curl -fsSL https://pkg.jenkins.io/debian/jenkins.io.key | sudo tee /usr/share/keyrings/jenkins-keyring.asc",
        "echo deb [signed-by=/usr/share/keyrings/jenkins-keyring.asc] https://pkg.jenkins.io/debian binary/ | sudo tee /etc/apt/sources.list.d/jenkins.list",
        "sudo apt-get update",
        "sudo apt-get install openjdk-11-jre -y",
        "sudo apt-get update",
        "sudo apt-get install jenkins -y",
        "sudo apt install nginx -y",
        "sudo apt install certbot python3-certbot-nginx -y",
        "wget https://get.helm.sh/helm-v3.9.3-linux-amd64.tar.gz",
        "tar xvf helm-v3.9.3-linux-amd64.tar.gz",
        "sudo mv linux-amd64/helm /usr/local/bin",
        "rm helm-v3.9.3-linux-amd64.tar.gz",
        "rm -rf linux-amd64",
        "sudo apt-get update",
        "helm version",
        "sleep 10",
        "sudo apt-get update",
        "curl -fsSL https://deb.nodesource.com/setup_16.x | sudo -E bash -",
        "sudo apt-get update",
        "sudo apt-get install -y nodejs",
        "sleep 10",
        "sudo apt-get update",
        "sudo npm install -g npm@9.1.1",
        "sleep 10",
        "sudo apt-get update",
        "ls -al",
        "sleep 10",
        "sudo apt-get update",
        "node -v",
        "npm -v",
        "sleep 10"
        ]
        }
        ]
}


